{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "target": "ES2015",
        "outDir": "out",
        "skipLibCheck": true,
        "strict": true,    
        "module": "commonjs",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": false
    },

    "include": ["src/**/*"]
}